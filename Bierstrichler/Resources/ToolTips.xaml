<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <system:String x:Key="tt_UserEdit_Surname">Vorname der Person</system:String>
    <system:String x:Key="tt_UserEdit_Name">Nachname der Person</system:String>
    <TextBlock Width="150" x:Key="tt_UserEdit_Email" TextWrapping="Wrap">
            <Bold>Email der Person</Bold> - Eine Angabe einer Email ermöglicht das Senden von Mitteilungen (z.B. dass man eingeloggt wurde oder dass das Konto im Minus ist).
    </TextBlock>
    <system:String x:Key="tt_UserEdit_Address">Adresse der Person</system:String>
    <system:String x:Key="tt_UserEdit_Gender">Geschlecht der Person</system:String>

</ResourceDictionary>