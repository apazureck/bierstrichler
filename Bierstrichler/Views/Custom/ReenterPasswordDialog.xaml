<Window x:Class="Bierstrichler.Views.Persons.ReenterPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bitte das Passwort erneut eingeben." Height="116" Width="300">
    <StackPanel>
        <Label>Bitte das Passwort erneut eingeben:</Label>
        <PasswordBox x:Name="PassWordBox" KeyDown="PasswordBox_KeyDown" Margin="5,0"/>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Margin="5" Click="Button_Cancel_Click">Abbrechen</Button>
            <Button Margin="5" Click="Button_OK_Click" Width="50">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
